{
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "dev": "pnpm migrate && tsx watch --env-file=.env src/index.ts",
    "start": "pnpm migrate && tsx --env-file=.env src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .js,.cjs,.mjs,.ts,.cts,.mts --fix --ignore-path .gitignore",
    "lint:ci": "eslint . --ext .js,.cjs,.mjs,.ts,.cts,.mts --ignore-path .gitignore",
    "test": "ava src/",
    "coverage": "c8 --all --src=dist --skip-full ava src/",
    "migrate": "knex migrate:latest",
    "make": "knex migrate:make"
  },
  "dependencies": {
    "@twurple/api": "~7.2.0",
    "@twurple/auth": "~7.2.0",
    "@zeepkist/graphql": "~1.26.0",
    "date-fns": "~4.1.0",
    "discord.js": "~14.16.0",
    "dotenv": "~16.4.0",
    "knex": "~3.1.0",
    "ky": "~1.7.0",
    "mysql2": "~3.11.0",
    "winston": "~3.15.0",
    "winston-daily-rotate-file": "~5.0.0"
  },
  "devDependencies": {
    "@ava/typescript": "~5.0.0",
    "@rushstack/eslint-patch": "~1.10.0",
    "@semantic-release/changelog": "~6.0.3",
    "@semantic-release/commit-analyzer": "~13.0.0",
    "@semantic-release/github": "~11.0.0",
    "@semantic-release/release-notes-generator": "~14.0.0",
    "@types/node": "~22.7.0",
    "@typescript-eslint/eslint-plugin": "~6.21.0",
    "@typescript-eslint/parser": "~6.21.0",
    "ava": "~6.1.0",
    "c8": "~10.1.0",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-import": "~2.31.0",
    "eslint-plugin-prettier": "~5.2.0",
    "eslint-plugin-simple-import-sort": "~10.0.0",
    "eslint-plugin-unicorn": "~50.0.0",
    "prettier": "~3.3.0",
    "semantic-release": "~24.1.0",
    "tsx": "~4.19.0",
    "typescript": "~5.6.0"
  },
  "ava": {
    "utilizeParallelBuilds": true,
    "typescript": {
      "compile": "tsc",
      "rewritePaths": {
        "src/": "dist/"
      }
    }
  },
  "renovate": {
    "extends": [
      "local>wopian/renovate-config"
    ],
    "packageRules": [
      {
        "matchPackagePrefixes": [
          "@twurple"
        ],
        "groupName": "twurple"
      }
    ]
  },
  "packageManager": "pnpm@9.12.2"
}
